body
  margin: 0
  padding: 0
  font: 14px Helvetica, Arial, sans-serif
  text-align: center

a
  color: #00b7ff
  text-decoration: none

h1
  font-family: "FuturaStd-Bold"
  font-size: 42px
  color: #444

p
  color: #999
  font-family: "FuturaStd-Medium"
  font-size: 22px

ul
  list-style: none

header
  background: #000

header h2
  color: #18cae6
  font-family: Courier
  font-size: 18px
  font-weight: lighter
  position: absolute
  top: 175px
  text-transform: uppercase
  width: 100%

canvas
  margin: 0
  padding: 0

#container
  position: relative
  padding: 40px 0 40 0px 0
  border-top: 8px solid #3fa757

.bt-menu-trigger
  cursor: pointer

.bt-menu-trigger
  position: fixed
  top: 15px
  left: 20px
  display: block
  width: 50px
  height: 50px
  cursor: pointer

.bt-menu-trigger span
  position: absolute
  top: 50%
  left: 0
  display: block
  width: 100%
  height: 4px
  margin-top: -2px
  background-color: #3fa757
  font-size: 0px
  -webkit-touch-callout: none
  -webkit-user-select: none
  -khtml-user-select: none
  -moz-user-select: none
  -ms-user-select: none
  user-select: none
  -webkit-transition: background-color 0.3s
  transition: background-color 0.3s

.bt-menu-trigger span:before,
.bt-menu-trigger span:after
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

.bt-menu.bt-menu-open
  height: 100%
  border-width: 30px 30px 30px 90px
  background-color: 0.3s
  -webkit-transition: border-width 0.3s
  transition: border-width 0.3s

.bt-menu
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 0s 0.3s
  border-width: 0px
  border-style: solid
  border-color: #333
  background-color: 0.3s
  -webkit-backface-visibility: hidden
  -webkit-transition: border-width 0.3s
  transition: border-width 0.3s
  z-index: 99
  -webkit-box-sizing: border-box
  -moz-box-sizing: border-box
  box-sizing: border-box

#wrapper
  margin: 0 auto
  display: block
  position: relative
  width: 90%

#desc
  font-family: Courier
  padding: 10px 20px
  margin: 20px auto 0
  border-top: 1px solid rgba(0,0,0,0.1)
  border-bottom: 1px solid rgba(0,0,0,0.1)
  display: inline-block

#wrapper h3
  font-family: "FuturaStd-Bold"
  color: #3fa757

#upcoming
  text-align: left
  margin: 50px 0

#upcoming ul
  margin: 0 auto
  padding: 0
  max-width: 800px
  width: 70%

#upcoming h3,
#upcoming h4
  text-decoration: uppercase
  font-family: Courier

#upcoming h3
  font-size: 24px
  color: #18cae6
  margin: 0 0 40px 0

#upcoming ul h3
  color: #444
  font-size: 18px
  margin: 0 0 6px 0

#upcoming h4
  color: #444
  font-size: 18px
  margin: 0 0 2px 0

#upcoming ul li
  margin: 0 0 18px -20px
  padding: 20px
  -webkit-border-radius: 20px
  -moz-border-radius: 20px
  border-radius: 20px

#upcoming ul li:hover
  background: #fff

#upcoming ul li p
  line-height: 24px
  color: #666
  font-size: 14px

.date
  border: 5px solid #3fa757
  font-family: Courier
  display: inline-block
  float: left
  line-height: 14px
  margin: 5px 25px 15px 0
  text-align: center
  width: 50px

.month
  font-size: 14px
  font-weight: bold
  display: block

.day
  font-size: 28px
  font-weight: lighter
  display: block

.voteup
  background: url("../images/sprite-vote.png") 0 0 no-repeat
  height: 50px
  cursor: pointer

.voteuphover
  background-position: 0 -50px no-repeat
  height: 50px

footer
  background: #0f0f0f
  border-top: 8px solid #3fa757
  margin: 50px 0 0
  padding: 20px 0
  width: 100%

footer p
  color: #18cae6
  font-family: courier
  font-size: 14px
  text-align: center
  padding: 40px 0

